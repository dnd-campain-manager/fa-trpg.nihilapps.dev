generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid()) @db.Uuid
  name        String     @unique
  userType    UserType   @default(player)
  userRole    UserRole   @default(normal)
  playToken   Int        @default(0)
  playCount   Int        @default(0)
  masterPoint Int        @default(0)
  masterCount Int        @default(0)
  Auth        Auth[]
  Document    Document[]
  Master      Master[]
  Pc          Pc[]

  @@map("users")
}

model Auth {
  id           String  @id @default(uuid()) @db.Uuid
  userId       String  @db.Uuid
  password     String
  accessToken  String?
  refreshToken String?
  User         User    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("auths")
}

model Master {
  id         String     @id @default(uuid()) @db.Uuid
  userId     String     @db.Uuid
  campainId  String     @db.Uuid
  masterType MasterType
  Campain    Campain    @relation(fields: [campainId], references: [id])
  User       User       @relation(fields: [userId], references: [id])
  Session    Session[]

  @@index([userId, campainId])
  @@map("masters")
}

model Campain {
  id        String        @id @default(uuid()) @db.Uuid
  name      String        @unique
  status    CampainStatus @default(ready)
  startTime String?
  endTime   String?
  url       String
  subMaster String[]
  Master    Master[]
  Pc        Pc[]
  Session   Session[]

  @@map("campains")
}

model Session {
  id            String   @id @default(uuid()) @db.Uuid
  campainId     String   @db.Uuid
  masterId      String   @db.Uuid
  number        Int
  name          String   @unique
  startTime     DateTime
  endTime       DateTime
  content       String
  playersNumber Int
  players       String[]
  exp           Int      @default(0)
  rewardUrl     String?
  gameTime      String
  Campain       Campain  @relation(fields: [campainId], references: [id])
  Master        Master   @relation(fields: [masterId], references: [id])

  @@map("sessions")
}

model Document {
  id              String             @id @default(uuid()) @db.Uuid
  userId          String             @db.Uuid
  title           String
  documentType    DocumentType
  importance      DocumentImportance @default(core)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  DocumentSection DocumentSection[]
  User            User               @relation(fields: [userId], references: [id])

  @@map("documents")
}

model Pc {
  id           String  @id @default(uuid()) @db.Uuid
  campainId    String  @db.Uuid
  userId       String  @db.Uuid
  name         String
  age          Int     @default(0)
  organization String?
  story        String?
  exp          Int     @default(0)
  pp           Int     @default(0)
  gp           Int     @default(0)
  ep           Int     @default(0)
  sp           Int     @default(0)
  cp           Int     @default(0)
  url          String
  Class        Class[]
  Campain      Campain @relation(fields: [campainId], references: [id])
  User         User    @relation(fields: [userId], references: [id])

  @@index([userId, name])
  @@map("pcs")
}

model Class {
  id        String  @id @default(uuid()) @db.Uuid
  pcId      String  @db.Uuid
  order     Int
  className PcClass
  level     Int?
  Pc        Pc      @relation(fields: [pcId], references: [id])

  @@index([pcId, className])
  @@map("classes")
}

model Template {
  id              String            @id @default(uuid()) @db.Uuid
  name            DocumentType
  DocumentSection DocumentSection[]

  @@map("templates")
}

model EditBlock {
  id                String          @id @default(uuid()) @db.Uuid
  name              BlockName       @default(text)
  documentSectionId String          @db.Uuid
  order             Int
  text              String?
  link              String?
  alt               String?
  items             Json?
  messageColor      MessageColor?   @default(blue)
  who               String?
  headingLevel      HeadingLevel?   @default(h3)
  DocumentSection   DocumentSection @relation(fields: [documentSectionId], references: [id])

  @@map("edit_blocks")
}

model DocumentSection {
  id         String      @id @default(uuid()) @db.Uuid
  documentId String?     @db.Uuid
  templateId String?     @db.Uuid
  order      Int
  title      String
  Document   Document?   @relation(fields: [documentId], references: [id])
  Template   Template?   @relation(fields: [templateId], references: [id])
  EditBlock  EditBlock[]

  @@map("document_sections")
}

enum HeadingLevel {
  h2
  h3
  h4
  h5
  h6
}

enum MessageColor {
  blue
  red
  yellow
  green
}

enum PcClass {
  none
  fighter
  ranger
  monk
  rogue
  paladin
  cleric
  babarian
  bard
  wizard
  druid
  sorcerer
  warlock
  artificer
}

enum DocumentType {
  god
  material
  character
  event
  organization
  nation
  race
  landscape
}

enum BlockName {
  text
  heading
  image
  orderedList
  unOrderedList
  message
  quote
}

enum CampainStatus {
  ready
  open
  close
}

enum UserType {
  player
  creator
}

enum UserRole {
  admin
  normal
}

enum MasterType {
  mainMaster
  subMaster
}

enum DocumentImportance {
  core
  side
}
